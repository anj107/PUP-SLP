@{
    ViewData["Title"] = "Welcome";
    ViewData["ShowSidebar"] = false;
    ViewData["ShowAdminName"] = false;
    ViewData["ShowLogOut"] = false;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column align-items-center justify-content-start text-center" style="height: 100vh; padding-top: 88px;">
    
    <!-- Logo -->
    <img src="~/images/PUP SLP Logo Big.png" alt="PUP Logo" style="height: 200px;" class="mb-3" />

    <!-- Title -->
    <h1 class="display-13 fw-bold mb-2">PUP Sining-Lahi Polyrepertory Ticket</h1>

    <!-- Subtitle -->
    <p class="mb-4">Please click your destination below:</p>

    <!-- Buttons -->
    <div class="d-flex flex-column gap-2" style="width: 350px;">
        <button id="adminBtn" onclick="showLoading(this, '@Url.Action("Login", "Account")')" class="btn btn-danger btn-lg" style="border-radius: 0.8rem;">
            <span class="button-text" style="font-size: 1.1rem;">Administrator</span>
            <span class="spinner-border spinner-border-sm d-none me-2" role="status" aria-hidden="true"></span>
        </button>

        <button id="audienceBtn" onclick="showLoading(this, '@Url.Action("RegForm", "RegForm")')" class="btn btn-danger btn-lg" style="border-radius: 0.8rem;">
            <span class="button-text" style="font-size: 1.1rem;">Audience</span>
            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
        </button>
    </div>

